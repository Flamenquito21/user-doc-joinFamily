---
import Header from "../components/header.astro";
import Layout from "../layouts/Layout.astro";
import Image from "../components/image.astro";
---

<Layout title="Welcome to Astro.">
  <Header />

  <main>
    <h1>Ver familia</h1>
    <Image
      src="coworkers.png"
      title="Puedes ver los compañeros si pulsas en COMPAÑEROS. Si eres admin puedes modificar los roles de tu grupo "
      alt="imagen de página de compañeros"
    />
  </main>
</Layout>
<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 2rem;
  }
  h1 {
    text-align: center;
  }
</style>
